<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        style="@style/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/name" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">


        <TextView
            style="@style/Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/address" />

        <TextView
            style="@style/Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Atlanta" />

        <TextView
            style="@style/Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Georgia" />


    </LinearLayout>

    <TextView
        style="@style/Education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/GSU" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_centerHorizontal="true"
            style="@style/Hobbies"
            android:id="@+id/tvHobbies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hobbies" />

        <TextView
            android:layout_toLeftOf="@id/tvHobbies"
            android:layout_below="@id/tvHobbies"
            style="@style/Hobbies"
            android:id="@+id/tvGaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gaming" />

        <TextView
            android:layout_toRightOf="@id/tvHobbies"
            android:layout_below="@id/tvHobbies"
            style="@style/Hobbies"
            android:id="@+id/tvSoccer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soccer" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/photo"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>